<!--Hidden link for fancybox-->
<div id="hidden_for_fancy" sytle="display:block">
  <a id="upload_scorm" href="/scorm_file/new" ></a>
</div>

<div class="tool">

  <div class="game">
    <div class="carrousel_title">
      <p class="carrousel_title_text"> choose game </p>
    </div>
    <div class="carrousel_wrapper">
      <div id="games_carrousel">
    </div>
    </div>
    <div class="data">
      <img id="game_preview"/>
      <p id="game_description"></p>
    </div>
  </div>
  <div class="content">
    <div class="carrousel_title">
      <p class="carrousel_title_text"> choose SCORM package</p>
    </div>
    <div class="scorm_list">
      <ul class="list-group">
      </ul>
    </div>
    </div>
    <div class="data">
      <ul id="lo_list">
      </ul>
    </div>
  </div>
  <div id="create_form_div" class="create">
      <p class="createButton">Create</p>
  </div>

  <a id="game_fancybox_link" href="#game_fancybox" style="display:none"></a>
  <div style='display:none'>
    <div id="game_fancybox">
      <div id="form_game_title">
      Create new game
      </div>
      <%= form_for(:game, :html => {:multipart => true, :id=>"create_form"}, :url => "/game") do |f| %>
        <input type="hidden" name="g_template_id" id="g_template_id" value=""></input>
        <input type="hidden" name="scorms_ids" id="scorms_ids" value=""></input>
        <p><span class="game_form_span">Game template:</span><span id="g_template_info"></span></p>
        <p><span class="game_form_span">Scorm packages:</span><span id="scorms_info"></span></p>

        <label class="text_label" for="name">
          <%= f.label "Name" %>
        </label>
        <div class="">
          <%= f.text_field :name, :class => "", :rows => 5 %>
        </div>
        <label class="text_label" for="avatar">
          <%= f.label "Avatar URL" %>
        </label>
        <div class="">
            <%= f.text_field :avatar_url, :class => "" %>
        </div>

        <button id="submit_game_form" class="createGameButton">Create</p>
      <%end%>
    </div>
  </div>

</div>

<script type="text/javascript">
  $(document).ready(function(){
    SGAME_WEB.init();
  });
</script>
